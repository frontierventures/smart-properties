<div class="container" xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <div style="width: 100%;">
        <span style="float:left">
            <h1 t:render="count"><t:slot name="htmlUserStatus" /> Users (<t:slot name="htmlUserCount" />)</h1>
            <a href="../summaryProperties?action=add">Add</a>
        </span>
        <span style="float:right">
            <select name="userStatus" id="userStatus">
                <option t:render="userStatus">
                    <t:attr name="value"><t:slot name="inputValue" /></t:attr>
                    <t:slot name="inputCaption" />
                </option>
            </select>
        </span>
    </div>
    <div>
        <table style="width: 100%">
            <thead>
                <tr>
                    <th>Last Login</th>
                    <th>UserId</th>
                    <th>Email</th>
                    <th>Ip</th>
                    <th>Seed</th>
                    <th>Bitcoin Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr t:render="row">
                    <td style="text-align:center"><t:slot name="htmlUserTimestamp" /></td>
                    <td style="text-align:center"><t:slot name="htmlUserId" /></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center"></td>
                    <td style="text-align:center">
                        <a t:render="action">
                            <t:attr name="id"><t:slot name="htmlId" /></t:attr>
                            <t:attr name="data-hint"><t:slot name="htmlHint" /></t:attr>
                            <t:attr name="class"><t:slot name="htmlClass" /></t:attr>
                            <t:attr name="href"><t:slot name="htmlUrl" /></t:attr>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
