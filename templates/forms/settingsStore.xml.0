<div class="c12 inner-content"  xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1" t:render="store">
    <form method="POST" enctype="multipart/form-data" action="../saveStore">
        <ul class="settings-list addnew-prod">
            <li>
                <div class="c12">
                    <div class="c8">
                        <h1 class="c12">Store Information</h1>
                    </div>
                </div>
            </li>
            <li>
                <t:transparent t:render="notification" />            
                <div class="c12">
                    <div class="c3">
                        <label for="storename">Store Name:</label>
                    </div>
                    <div class="c9">
                        <input type="text" name="storeName" id="storename"><t:attr name="value"><t:slot name="htmlStoreName" /></t:attr></input>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="storename">Store Url:</label>
                    </div>
                    <div class="c9">
                        <div class="productText">http://www.coingig.com/<t:slot name="htmlStoreName" /></div>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="ccountry"><a href="../helpEscrow">Buyer Escrow:</a></label>
                    </div>
                    <div class="c6">
                        <select name="isEscrowOn">
                            <option t:render="escrow"><t:attr name="value"><t:slot name="inputValue" /></t:attr><t:slot name="inputCaption" /></option>
                        </select>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="ccountry">Location:</label>
                    </div>
                    <div class="c6">
                        <select name="storeCountryId">
                            <option t:render="country"><t:attr name="value"><t:slot name="inputValue" /></t:attr><t:slot name="inputCaption" /></option>
                        </select>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="description">Description:</label>
                    </div>
                    <div class="c9">
                        <textarea id="description" name="storeDescription" cols="30" rows="4"><t:slot name="htmlStoreDescription" /></textarea>
                    </div>
                </div>
                <div class="c12">
                    <img id="mainimage"><t:attr name="src"><t:slot name="htmlStoreLogo" /></t:attr></img>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="image">Store Logo:</label>
                    </div>
                    <div class="c9">
                        <div class="imagebutton">
                            <input type="button" class="imgopen" id="pseudobutton" value="choose file" />
                            <!-- for pressed style -->
                            <input type="file" name="image" class="hide" id="BrowserHidden" 
                                onmousedown="buttonPush('depressed');" onmouseup="buttonPush('normal');" onmouseout="buttonPush('phased');" />
                        </div>
                        <small class="nofile" id="FileName">no file chosen</small>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="fbook">Facebook URL:</label>
                    </div>
                    <div class="c9">
                        <input type="text" name="storeFacebookUrl" placeholder="http://" id="fbook"><t:attr name="value"><t:slot name="htmlStoreFacebookUrl" /></t:attr></input>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="twittr">Twitter URL:</label>
                    </div>
                    <div class="c9">
                        <input type="text" name="storeTwitterUrl" placeholder="http://" id="twittr"><t:attr name="value"><t:slot name="htmlStoreTwitterUrl" /></t:attr></input>
                    </div>
                </div>
            </li>
            <li class="full center">
                <button class="button green medium" name="button" value="Update">Save Store</button>
            </li>
        </ul>
    </form>
</div>
