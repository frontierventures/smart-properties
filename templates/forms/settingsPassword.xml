<div class="c12 inner-content"  xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form action="../savePassword" method="POST" enctype="application/x-www-form-urlencoded">
        <ul class="settings-list addnew-prod" t:render="password">
            <li>
                <div class="c12">
                    <div class="c8">
                        <h1 class="c12">Password Information</h1>
                    </div>
                </div>
            </li>
            <li>
                <t:transparent t:render="notification" />            
                <div class="c12">
                    <div class="c3">
                        <label for="oldpass">Old Password:</label>
                    </div>
                    <div class="c6">
                        <input type="password" name="passwordOld" id="oldpass"><t:attr name="value"><t:slot name="htmlPasswordOld" /></t:attr></input>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="newpass">New Password:</label>
                    </div>
                    <div class="c6">
                        <input type="password" name="passwordNew" id="newpass"><t:attr name="value"><t:slot name="htmlPasswordNew" /></t:attr></input>
                    </div>
                </div>
                <div class="c12">
                    <div class="c3">
                        <label for="repeatnewpass">Repeat Password:</label>
                    </div>
                    <div class="c6">
                        <input type="password" name="passwordNewRepeat" id="repeatnewpass"><t:attr name="value"><t:slot name="htmlPasswordNewRepeat" /></t:attr></input>
                    </div>
                </div>
            </li>
            <li class="full center">
                <button class="button green medium" name="button" value="Change">Change Password</button>
            </li>
        </ul>
    </form>
</div>
