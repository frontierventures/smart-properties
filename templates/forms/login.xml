<div class="container" xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1" t:render="form">
    <form class="form-signin" action="../loginAction" method="POST" enctype="application/x-www-form-urlencoded">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input type="text" class="input-block-level" placeholder="Email address" name="userEmail"><t:attr name="value"><t:slot name="htmlEmail" /></t:attr></input>
        <input type="password" class="input-block-level" placeholder="Password" name="userPassword"><t:attr name="value"><t:slot name="htmlPassword" /></t:attr></input>
        <label class="checkbox">
            <input type="checkbox" value="remember-me" /> Remember me
        </label>
        <button name="button" value="Login" class="btn btn-large btn-primary" type="submit">Sign in</button>
    </form>
</div>
