<div class="container" xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1" t:render="form">
    <form class="form-settings" action="../verifyMessage" method="POST" enctype="application/x-www-form-urlencoded">
        <h2 class="form-settings-heading">User Settings</h2>
        <div style="text-align: center">Country: <t:slot name="htmlCountry" /></div>
        <input type="text" class="input-block-level" placeholder="Bitcoin address" name="userBitcoinAddress"><t:attr name="value"><t:slot name="htmlBitcoinAddress" /></t:attr></input>
        <button name="button" value="Verify" class="btn btn-large btn-primary" type="submit">Save</button>
    </form>
</div>
