<div id="recoverPasswordPopup" class="colorbox-zone" xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
    <form id="recoverPasswordForm" action="../recoverPassword" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="c12 inner-content">
            <ul class="settings-list addnew-prod">
                <li>
                    <div class="c12">
                        <div class="c8">
                            <h1 class="c12">Password Recovery</h1>
                        </div>
                    </div>
                    <div class="c12">
                        Please provide your email address to receive new password 
                    </div>
                </li>
                <li>
                    <div class="recoveryNotification" id="recoveryNotification">
                    </div>
                    <div class="c12">
                        <div class="c3">
                            <label for="email">Email:</label>
                        </div>
                        <div class="c6">
                            <input type="text" name="userEmail" id="email"/>
                        </div>
                    </div>
                </li>
                <li class="full center">
                    <input name="button" class="button green medium" type="submit" value="Recover Password"></input> 
                </li>
            </ul>
        </div>
    </form>
</div>
